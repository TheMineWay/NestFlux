{
  "name": "nestflux",
  "version": "1.0.0.alpha-1",
  "description": "Scaffold app for ReactJS + NestJS projects (fully written in TS)",
  "scripts": {
    "dev:client": "pnpm --filter nestflux-client dev",
    "dev:server": "pnpm --filter nestflux-server start:dev",
    "dev": "concurrently --names \"CLIENT, SERVER\" --prefix \"[{name}]\" \"pnpm dev:client\" \"pnpm dev:server\"",
    "prod:client": "pnpm --filter nestflux-client build && pnpm --filter nestflux-client start",
    "prod:server": "pnpm --filter nestflux-server start:prod",
    "prod": "concurrently --names \"CLIENT, SERVER\" --prefix \"[{name}]\" \"pnpm prod:client\" \"pnpm prod:server\""
  },
  "keywords": [],
  "author": {
    "name": "TheMineWay",
    "url": "https://github.com/TheMineWay"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "workspaces": [
    "nestflux-client",
    "nestflux-server"
  ]
}
