{
  "name": "@shared/api-definition",
  "version": "1.0.0",
  "description": "Shared API definition",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheMineWay/NestFlux",
    "directory": "packages/api-definition"
  },
  "scripts": {
    "generate-barrel": "ts-node scripts/generate-barrel.ts",
    "build": "pnpm generate-barrel && vite build",
    "old-build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "prepublishOnly": "pnpm run build",
    "test": "vitest"
  },
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@shared/constants": "workspace:*",
    "@shared/models": "workspace:*",
    "axios": "^1.9.0",
    "zod": "^4.0.5"
  }
}
