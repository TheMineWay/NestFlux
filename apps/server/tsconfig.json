{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2021",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true,
    "types": ["vitest"],

    "paths": {
      "@pkg": ["./package.json"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@dto/*": ["src/dto/*"],
      "@api/*": ["src/api/*"],
      "@database/*": ["src/database/*"],
      "@schemas/*": ["src/database/schemas/*"],
      "@core/*": ["src/core/*"],
      "@mocks/*": ["src/mocks/*"]
    }
  }
}
