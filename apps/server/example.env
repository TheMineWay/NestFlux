# [ ENV ]
NODE_ENV="development" # "production" by default

# [ DEBUG ]
LOG_ENV_VALUES=true # true/false

# [ RATE LIMITING ]
# MAX_LOGIN_REQUESTS_PER_MINUTE=8 # Max login requests per minute
# MAX_REQUESTS_PER_MINUTE=120 # Rate limiting for all endpoints (except for the ones with specific configuration)

# [ AUTHENTICATION ]
JWT_SECRET="..." # Use a complex and hard to guess secret value
# JWT_DURATION="30d" # Other valid values might be "30s", "30m", etc
# TOTP_DIGITS=6 # Also modify the constant TOTP_DIGITS from totp.form.tsx
# TOTP_PERIOD=30

# [ DATABASE ]
DATABASE_URL=""

# [ CORS ]
# CORS_ONLY_ALLOW_DOMAINS="domain1.com,domain2.com" # Allowed CORS domains (if more than one, separate by ','. Ex: "domain1.com,domain2.com"). If left commented all are allowed